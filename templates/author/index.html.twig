{% extends 'base.html.twig' %}

{% block title %}Authors{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Author List</h1>
        <a href="{{ path('app_author_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Author
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Biography</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for author in authors %}
                        <tr>
                            <td>{{ author.id }}</td>
                            <td>{{ author.fullName }}</td>
                            <td>{{ author.email ?: 'N/A' }}</td>
                            <td>{{ author.biography|slice(0, 100) }}{% if author.biography|length > 100 %}...{% endif %}</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_author_show', {'id': author.id}) }}" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                    <a href="{{ path('app_author_edit', {'id': author.id}) }}" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center">No authors found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
